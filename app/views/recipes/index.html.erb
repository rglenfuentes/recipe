<p id="notice"><%= notice %></p>

<h1> Glen's Recipes</h1>
<div class="row">
<% @recipes.each do |recipe| %>
  
  <div class="col-md-4">

  <div class="recipe-box">

    <% if recipe.image? %>

      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>

    <% end %>

    <ul>

        <li class="recipetitle"><%= recipe.title %></li>

        <li class="recipedescription"><%= recipe.description %></li>

        <li class="recipebox"><%= link_to 'Show', recipe %> |

        <%= link_to 'Edit', edit_recipe_path(recipe) %>

      <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>

    </ul>

  </div><!-- /recipe-box-->

</div><!--col-md-4-->


 <% end %>

<br>
<div class="NewRecipe">
<%= link_to 'New Recipe', new_recipe_path %>
</div>


